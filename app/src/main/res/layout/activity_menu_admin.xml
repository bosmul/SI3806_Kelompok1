<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.rpl.kelompok1.gelo.MenuCustomerActivity">





<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="Menu ADMIN "
    android:textSize="30sp"
    android:padding="20dp"
    android:textColor="@color/Judul"
    android:id="@+id/textView10"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true" />

<Button
    android:id="@+id/btnPromo"
    style="@style/btnStyleOrange"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" Tambah Promo"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"

    android:onClick="onClick"
    android:layout_marginTop="13dp"
    android:layout_below="@+id/btnLaporanTransaksi"
    android:layout_centerHorizontal="true" />



<Button
    android:id="@+id/btnTambahPemilikJasa"
    style="@style/btnStyleOrange"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tambah Pemilik Jasa Laundry"
    android:layout_marginRight="100dp"
    android:layout_marginLeft="100dp"

    android:onClick="onClick"

    android:layout_alignParentStart="true" />

<Button
    android:id="@+id/btnLaporanTransaksi"
    style="@style/btnStyleOrange"
    android:layout_width="333dp"
    android:layout_height="59dp"
    android:text="Laporan Transaksi"
    android:layout_marginRight="80dp"
    android:layout_marginLeft="80dp"

    android:onClick="onClick"

    android:layout_below="@+id/btnTambahPemilikJasa" />

</RelativeLayout>
